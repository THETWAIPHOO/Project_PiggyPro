@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Project_PiggyPro.Services
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject UserManager<Project_PiggyPro.Data.Project_PiggyProUser> UserManager
@inject IInAppNotificationService NotificationService
@implements IDisposable

<CascadingAuthenticationState>
    <div class="user-dashboard-page">
        <!-- User Dashboard Navigation -->
        <nav class="navbar">
            <div class="navbar-container">
                <a href="/User/UserDashboard" class="navbar-brand">
                    <span class="pig-icon">🐖</span> PiggyPro
                </a>
                <div class="nav-menu">
                    <NavLink href="/User/UserDashboard" class="nav-btn" Match="NavLinkMatch.All">
                        Dashboard
                    </NavLink>
                    <NavLink href="/Transactions" class="nav-btn">
                        Transactions
                    </NavLink>
                    <NavLink href="/Budgets" class="nav-btn">
                        Budget
                    </NavLink>
                    <NavLink href="/goals" class="nav-btn">
                        Goals
                    </NavLink>
                    <NavLink href="/Reports" class="nav-btn">
                        Reports
                    </NavLink>
                </div>
                <AuthorizeView>
                    <Authorized>
                        <div class="user-section">

                            <a href="Account/Manage" class="user-name">@fullName</a>
                            <a href="/Account/Logout" class="btn-logout">Logout</a>
                            <a href="/notifications" class="notification-bell" title="Notifications">
                                <span class="bell-icon">🔔</span>
                                @if (unreadCount > 0)
                                {
                                    <span class="notification-badge">@unreadCount</span>
                                }
                            </a>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
        </nav>

        <main class="main-content">
            @Body
        </main>
    </div>
</CascadingAuthenticationState>

@code {
    private string fullName = string.Empty;
    private int unreadCount = 0;
    private string currentUserId = string.Empty;
    private System.Threading.Timer? refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationStateProvider.AuthenticationStateChanged += OnAuthStateChanged;
        await LoadUserNameFromClaims();
        await LoadNotificationCount();

        // Auto-refresh notification count every 30 seconds
        refreshTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadNotificationCount();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
    }

    private async void OnAuthStateChanged(Task<AuthenticationState> task)
    {
        await LoadUserNameFromClaims();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadUserNameFromClaims()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user?.Identity?.IsAuthenticated == true)
        {
            currentUserId = UserManager.GetUserId(user) ?? string.Empty;

            var firstName = user.FindFirst("FirstName")?.Value;
            var lastName = user.FindFirst("LastName")?.Value;

            fullName = !string.IsNullOrWhiteSpace(firstName)
                ? $"{firstName} {lastName}".Trim()
                : (user.Identity?.Name ?? "User");
        }
        else
        {
            fullName = string.Empty;
            currentUserId = string.Empty;
        }
    }

    private async Task LoadNotificationCount()
    {
        if (!string.IsNullOrEmpty(currentUserId))
        {
            unreadCount = await NotificationService.GetUnreadCountAsync(currentUserId);
        }
    }

    private void GoToNotifications()
    {
        Navigation.NavigateTo("/notifications");
    }

    public void Dispose()
    {
        AuthenticationStateProvider.AuthenticationStateChanged -= OnAuthStateChanged;
        refreshTimer?.Dispose();
    }
}