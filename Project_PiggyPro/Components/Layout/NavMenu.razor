@implements IDisposable
@inject NavigationManager NavigationManager

<nav class="top-navbar">
    <div class="nav-content">
        <!-- Logo -->
        <a href="/" class="brand">
            <span class="pig-icon">🐖</span>
            <span class="brand-name">PiggyPro</span>
        </a>

        <!-- Navigation Buttons -->
        <div class="nav-buttons">
            <NavLink href="" Match="NavLinkMatch.All" class="nav-btn">
                Home
            </NavLink>
            <NavLink href="about" class="nav-btn">
                About
            </NavLink>
            <NavLink href="contact" class="nav-btn">
                Contact
            </NavLink>
                <NotAuthorized>
                    <NavLink href="Account/Login" class="nav-btn login-btn">
                        Login
                    </NavLink>
                </NotAuthorized>
        </div>
    </div>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}