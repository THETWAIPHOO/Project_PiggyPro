@page "/budgets/delete"
@using Microsoft.EntityFrameworkCore
@using Project_PiggyPro.Domain
@inject IDbContextFactory<Project_PiggyPro.Data.Project_PiggyProContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Budget</h2>
    <hr />
    @if (budget is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BudgetAmount</dt>
            <dd class="col-sm-10">@budget.BudgetAmount</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">StartDate</dt>
            <dd class="col-sm-10">@budget.StartDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EndDate</dt>
            <dd class="col-sm-10">@budget.EndDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">BudgetPeriod</dt>
            <dd class="col-sm-10">@budget.BudgetPeriod</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RuleName</dt>
            <dd class="col-sm-10">@budget.RuleName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NeedsPercentage</dt>
            <dd class="col-sm-10">@budget.NeedsPercentage</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">WantsPercentage</dt>
            <dd class="col-sm-10">@budget.WantsPercentage</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SavingsPercentage</dt>
            <dd class="col-sm-10">@budget.SavingsPercentage</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">BucketType</dt>
            <dd class="col-sm-10">@budget.BucketType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">AllocatedAmount</dt>
            <dd class="col-sm-10">@budget.AllocatedAmount</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">AppUserId</dt>
            <dd class="col-sm-10">@budget.AppUserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CategoryId</dt>
            <dd class="col-sm-10">@budget.CategoryId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@budget.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@budget.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@budget.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@budget.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="budget" OnValidSubmit="DeleteBudget" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(budget is null)">Delete</button> |
            <a href="/budgets">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Budget? budget;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        budget = await context.Budget.FirstOrDefaultAsync(m => m.Id == Id);

        if (budget is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBudget()
    {
        using var context = DbFactory.CreateDbContext();
        context.Budget.Remove(budget!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/budgets");
    }
}
