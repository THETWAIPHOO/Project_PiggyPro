@page "/goals"
@layout UserLayout
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Project_PiggyPro.Components.Layout
@using Project_PiggyPro.Domain
@using Project_PiggyPro.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Project_PiggyPro.Data.Project_PiggyProContext> DbFactory

<PageTitle>My Goals</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>My Financial Goals</h1>
    <a href="goals/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Goal
    </a>
</div>

<QuickGrid Class="table table-striped table-hover" Items="context.Goal">
    <PropertyColumn Property="goal => goal.GoalName" Title="Goal Name" Sortable="true" />

    <PropertyColumn Property="goal => goal.TargetAmount" Title="Target" Sortable="true" Format="C" />

    <PropertyColumn Property="goal => goal.CurrentAmount" Title="Saved" Sortable="true" Format="C" />

    <TemplateColumn Title="Progress">
        <div class="progress" style="height: 20px; min-width: 100px;">
            <div class="progress-bar @GetProgressBarClass(context.ProgressPercentage)"
                 role="progressbar"
                 style="width: @Math.Min(context.ProgressPercentage, 100)%">
                @context.ProgressPercentage.ToString("F0")%
            </div>
        </div>
    </TemplateColumn>

    <PropertyColumn Property="goal => goal.TargetDate" Title="Target Date" Sortable="true" Format="MMM dd, yyyy" />

    <TemplateColumn Title="Status">
        <span class="badge @GetStatusBadgeClass(context.Status)">@context.Status</span>
    </TemplateColumn>

    <TemplateColumn Title="Category">
        @context.Category
    </TemplateColumn>

    <TemplateColumn Title="Actions" Context="goal">
        <a href="@($"goals/details?id={goal.Id}")" class="btn btn-sm btn-info" title="View Details">
            <i class="bi bi-eye"></i>
        </a>
        <a href="@($"goals/edit?id={goal.Id}")" class="btn btn-sm btn-warning" title="Edit">
            <i class="bi bi-pencil"></i>
        </a>
        <a href="@($"goals/delete?id={goal.Id}")" class="btn btn-sm btn-danger" title="Delete">
            <i class="bi bi-trash"></i>
        </a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Project_PiggyProContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();

    private string GetProgressBarClass(decimal percentage)
    {
        if (percentage >= 100) return "bg-success";
        if (percentage >= 75) return "bg-info";
        if (percentage >= 50) return "bg-primary";
        if (percentage >= 25) return "bg-warning";
        return "bg-danger";
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Active" => "bg-primary",
            "Completed" => "bg-success",
            "Cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}