@page "/goals"
@layout UserLayout
@attribute [Authorize]
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Project_PiggyPro.Components.Layout
@using Project_PiggyPro.Data
@using Project_PiggyPro.Domain
@using Project_PiggyPro.Services

@inject GoalService GoalService
@inject UserManager<Project_PiggyProUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Goals - PiggyPro</PageTitle>

<div class="goals-container">
    <div class="page-header">
        <div>
            <h1>💰 Savings Goals</h1>
            <p class="subtitle">Track your financial goals and watch your progress grow</p>
        </div>
        <a href="/goals/create" class="btn-primary">➕ Create New Goal</a>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <p>Loading your goals...</p>
        </div>
    }
    else if (stats != null)
    {
        <!-- Savings Budget Info Card - MOVED FROM DETAILS PAGE -->
        <div class="savings-info-card">
            <div class="savings-info-header">
                <span class="savings-icon">💰</span>
                <div class="savings-info-text">
                    <div class="savings-label">Available Savings Budget</div>
                    <div class="savings-amount">@availableSavings.ToString("C2")</div>
                </div>
            </div>
            <div class="savings-details">
                <span class="savings-detail">Total in all goals: @totalInGoals.ToString("C2")</span>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card total">
                <div class="stat-icon">🎯</div>
                <div class="stat-content">
                    <div class="stat-label">Total Goals</div>
                    <div class="stat-value">@stats.TotalGoals</div>
                </div>
            </div>

            <div class="stat-card active">
                <div class="stat-icon">⚡</div>
                <div class="stat-content">
                    <div class="stat-label">Active Goals</div>
                    <div class="stat-value">@stats.ActiveGoals</div>
                </div>
            </div>

            <div class="stat-card completed">
                <div class="stat-icon">✅</div>
                <div class="stat-content">
                    <div class="stat-label">Completed</div>
                    <div class="stat-value">@stats.CompletedGoals</div>
                </div>
            </div>

            <div class="stat-card progress">
                <div class="stat-icon">📊</div>
                <div class="stat-content">
                    <div class="stat-label">Overall Progress</div>
                    <div class="stat-value">@stats.OverallProgress.ToString("F1")%</div>
                </div>
            </div>
        </div>

        <!-- Goals List -->
        @if (goals.Any())
        {
            <div class="goals-grid">
                @foreach (var goal in goals)
                {
                    <div class="goal-card @(goal.Status.ToLower())">
                        <div class="goal-header">
                            <div class="goal-title-section">
                                <h3 class="goal-name">@goal.GoalName</h3>
                                @if (!string.IsNullOrEmpty(goal.Category))
                                {
                                    <span class="goal-category">@goal.Category</span>
                                }
                            </div>
                            <span class="goal-status @goal.Status.ToLower()">@goal.Status</span>
                        </div>

                        @if (!string.IsNullOrEmpty(goal.Description))
                        {
                            <p class="goal-description">@goal.Description</p>
                        }

                        <div class="goal-amounts">
                            <div class="amount-row">
                                <span class="amount-label">Current</span>
                                <span class="amount-value current">@goal.CurrentAmount.ToString("C2")</span>
                            </div>
                            <div class="amount-row">
                                <span class="amount-label">Target</span>
                                <span class="amount-value target">@goal.TargetAmount.ToString("C2")</span>
                            </div>
                            <div class="amount-row remaining">
                                <span class="amount-label">Remaining</span>
                                <span class="amount-value">@goal.RemainingAmount.ToString("C2")</span>
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="progress-section">
                            <div class="progress-header">
                                <span class="progress-label">Progress</span>
                                <span class="progress-percentage">@goal.ProgressPercentage.ToString("F1")%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @Math.Min(goal.ProgressPercentage, 100)%"></div>
                            </div>
                        </div>

                        <!-- Target Date Info -->
                        <div class="date-info">
                            <span class="date-icon">📅</span>
                            <span class="date-text">
                                Target: @goal.TargetDate.ToString("MMM dd, yyyy")
                                @if (goal.Status == "Active")
                                {
                                    if (goal.DaysRemaining > 0)
                                    {
                                        <span class="days-remaining">(@goal.DaysRemaining days left)</span>
                                    }
                                    else if (goal.DaysRemaining == 0)
                                    {
                                        <span class="days-remaining today">Due today!</span>
                                    }
                                    else
                                    {
                                        <span class="days-remaining overdue">Overdue!</span>
                                    }
                                }
                            </span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="goal-actions">
                            <a href="/goals/details/@goal.Id" class="btn-action view">View Details</a>
                            <a href="/goals/edit/@goal.Id" class="btn-action edit">Edit</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">🎯</div>
                <h2>No Goals Yet</h2>
                <p>Start your savings journey by creating your first financial goal!</p>
                <a href="/goals/create" class="btn-primary">Create Your First Goal</a>
            </div>
        }
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">
            <strong>Error:</strong> @errorMessage
        </div>
    }
</div>

@code {
    private List<Goal> goals = new();
    private GoalStatsDto? stats;
    private string currentUserId = string.Empty;
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    // ADDED: Variables for savings budget
    private decimal availableSavings = 0;
    private decimal totalInGoals = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var appUser = await UserManager.GetUserAsync(user);
                if (appUser != null)
                {
                    currentUserId = appUser.Id;
                    await LoadGoals();
                    await LoadSavingsInfo(); // ADDED: Load savings info
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load goals: {ex.Message}";
            Console.WriteLine($"Error in OnInitializedAsync: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadGoals()
    {
        try
        {
            goals = await GoalService.GetUserGoalsAsync(currentUserId);
            stats = await GoalService.GetGoalStatsAsync(currentUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load goals: {ex.Message}";
            Console.WriteLine($"Error loading goals: {ex}");
        }
    }

    // ADDED: Method to load savings information
    private async Task LoadSavingsInfo()
    {
        try
        {
            availableSavings = await GoalService.GetAvailableSavingsBudgetAsync(currentUserId);
            totalInGoals = await GoalService.GetTotalInGoalsAsync(currentUserId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading savings info: {ex}");
        }
    }
}
