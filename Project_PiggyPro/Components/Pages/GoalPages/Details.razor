@page "/goals/details"
@using Microsoft.EntityFrameworkCore
@using Project_PiggyPro.Domain
@inject IDbContextFactory<Project_PiggyPro.Data.Project_PiggyProContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Goal</h2>
    <hr />
    @if (goal is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">GoalName</dt>
            <dd class="col-sm-10">@goal.GoalName</dd>
            <dt class="col-sm-2">TargetAmount</dt>
            <dd class="col-sm-10">@goal.TargetAmount</dd>
            <dt class="col-sm-2">CurrentAmount</dt>
            <dd class="col-sm-10">@goal.CurrentAmount</dd>
            <dt class="col-sm-2">TargetDate</dt>
            <dd class="col-sm-10">@goal.TargetDate</dd>
            <dt class="col-sm-2">GoalStatus</dt>
            <dd class="col-sm-10">@goal.GoalStatus</dd>
            <dt class="col-sm-2">AppUserId</dt>
            <dd class="col-sm-10">@goal.AppUserId</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@goal.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@goal.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@goal.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@goal.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/goals/edit?id={goal.Id}")">Edit</a> |
            <a href="@($"/goals")">Back to List</a>
        </div>
    }
</div>

@code {
    private Goal? goal;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        goal = await context.Goal.FirstOrDefaultAsync(m => m.Id == Id);

        if (goal is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
