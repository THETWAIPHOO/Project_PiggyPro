@page "/appusers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Project_PiggyPro.Domain
@using Project_PiggyPro.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Project_PiggyPro.Data.Project_PiggyProContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="appusers/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.AppUser">
    <PropertyColumn Property="appuser => appuser.Email" />
    <PropertyColumn Property="appuser => appuser.PasswordHash" />
    <PropertyColumn Property="appuser => appuser.FirstName" />
    <PropertyColumn Property="appuser => appuser.LastName" />
    <PropertyColumn Property="appuser => appuser.IsEmailVerified" />
    <PropertyColumn Property="appuser => appuser.DateCreated" />
    <PropertyColumn Property="appuser => appuser.DateUpdated" />
    <PropertyColumn Property="appuser => appuser.CreatedBy" />
    <PropertyColumn Property="appuser => appuser.UpdatedBy" />

    <TemplateColumn Context="appuser">
        <a href="@($"appusers/edit?id={appuser.Id}")">Edit</a> |
        <a href="@($"appusers/details?id={appuser.Id}")">Details</a> |
        <a href="@($"appusers/delete?id={appuser.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Project_PiggyProContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
