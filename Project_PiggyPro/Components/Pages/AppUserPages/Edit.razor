@page "/appusers/edit"
@using Microsoft.EntityFrameworkCore
@using Project_PiggyPro.Domain
@inject IDbContextFactory<Project_PiggyPro.Data.Project_PiggyProContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>AppUser</h2>
<hr />
@if (AppUser is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="AppUser" OnValidSubmit="UpdateAppUser" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="AppUser.Id" value="@AppUser.Id" />
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <InputText id="email" @bind-Value="AppUser.Email" class="form-control" />
                    <ValidationMessage For="() => AppUser.Email" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="passwordhash" class="form-label">PasswordHash:</label>
                    <InputText id="passwordhash" @bind-Value="AppUser.PasswordHash" class="form-control" />
                    <ValidationMessage For="() => AppUser.PasswordHash" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="firstname" class="form-label">FirstName:</label>
                    <InputText id="firstname" @bind-Value="AppUser.FirstName" class="form-control" />
                    <ValidationMessage For="() => AppUser.FirstName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="lastname" class="form-label">LastName:</label>
                    <InputText id="lastname" @bind-Value="AppUser.LastName" class="form-control" />
                    <ValidationMessage For="() => AppUser.LastName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="isemailverified" class="form-label">IsEmailVerified:</label>
                    <InputCheckbox id="isemailverified" @bind-Value="AppUser.IsEmailVerified" class="form-check-input" />
                    <ValidationMessage For="() => AppUser.IsEmailVerified" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="AppUser.DateCreated" class="form-control" />
                    <ValidationMessage For="() => AppUser.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="AppUser.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => AppUser.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="AppUser.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => AppUser.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="AppUser.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => AppUser.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/appusers">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private AppUser? AppUser { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        AppUser ??= await context.AppUser.FirstOrDefaultAsync(m => m.Id == Id);

        if (AppUser is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateAppUser()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(AppUser!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!AppUserExists(AppUser!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/appusers");
    }

    private bool AppUserExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.AppUser.Any(e => e.Id == id);
    }
}
