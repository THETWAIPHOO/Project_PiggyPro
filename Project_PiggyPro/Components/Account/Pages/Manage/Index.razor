@page "/Account/Manage"
@rendermode InteractiveServer
@layout UserLayout
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using Project_PiggyPro.Data
@inject UserManager<Project_PiggyProUser> UserManager
@inject SignInManager<Project_PiggyProUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<Project_PiggyProContext> DbFactory
@inject SignInManager<Project_PiggyProUser> SignInManager
@inject NavigationManager NavigationManager

<PageTitle>Profile Settings - PiggyPro</PageTitle>

<div class="profile-container">
    <div class="profile-header">
        <div>
            <h1>Profile Settings</h1>
            <p class="subtitle">Manage your account information and preferences</p>
        </div>
        <a href="/User/UserDashboard" class="btn-back">← Back to Dashboard</a>
    </div>

    @if (successMessage != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @successMessage
        </div>
    }

    @if (errorMessage != null)
    {
        <div class="alert alert-error">
            <strong>Error!</strong> @errorMessage
        </div>
    }

    <div class="profile-grid">
        <!-- Profile Information Card -->
        <div class="profile-card">
            <div class="card-header">
                <h2>Profile Information</h2>
                <p>Update your account details</p>
            </div>

            <EditForm Model="Input" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <div class="form-sections">
                    <!-- Username (Read-only) -->
                    <div class="form-group">
                        <label class="form-label">
                            Username
                            <span class="badge-readonly">Read-only</span>
                        </label>
                        <input type="text"
                               value="@username"
                               class="form-control"
                               disabled />
                        <small class="form-hint">Username cannot be changed</small>
                    </div>

                    <!-- Email (Read-only) -->
                    <div class="form-group">
                        <label class="form-label">
                            Email Address
                            <span class="badge-readonly">Read-only</span>
                        </label>
                        <input type="email"
                               value="@email"
                               class="form-control"
                               disabled />
                        <small class="form-hint">Email cannot be changed</small>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label for="phone-number" class="form-label">
                            Phone Number
                        </label>
                        <input type="tel"
                               id="phone-number"
                               @bind="Input.PhoneNumber"
                               class="form-control"
                               placeholder="+1 (555) 123-4567" />
                        <ValidationMessage For="@(() => Input.PhoneNumber)" class="validation-message" />
                    </div>

                    <!-- First Name -->
                    <div class="form-group">
                        <label for="first-name" class="form-label">
                            First Name
                        </label>
                        <input type="text"
                               id="first-name"
                               @bind="Input.FirstName"
                               class="form-control"
                               placeholder="John" />
                        <ValidationMessage For="@(() => Input.FirstName)" class="validation-message" />
                    </div>

                    <!-- Last Name -->
                    <div class="form-group">
                        <label for="last-name" class="form-label">
                            Last Name
                        </label>
                        <input type="text"
                               id="last-name"
                               @bind="Input.LastName"
                               class="form-control"
                               placeholder="Doe" />
                        <ValidationMessage For="@(() => Input.LastName)" class="validation-message" />
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit"
                            class="btn-primary"
                            @onclick="SaveAndRedirect"
                            disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save Changes</span>

                        }
                    </button>
                </div>
            </EditForm>
        </div>

        <!-- Account Statistics Card -->
        <div class="profile-card">
            <div class="card-header">
                <h2>Account Statistics</h2>
                <p>Your activity summary</p>
            </div>

            <div class="stats-list">
                <div class="stat-item">
                    <div class="stat-icon">📅</div>
                    <div class="stat-info">
                        <div class="stat-label">Member Since</div>
                        <div class="stat-value">@memberSince</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">💰</div>
                    <div class="stat-info">
                        <div class="stat-label">Total Transactions</div>
                        <div class="stat-value">@totalTransactions</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">📊</div>
                    <div class="stat-info">
                        <div class="stat-label">Active Budgets</div>
                        <div class="stat-value">@activeBudgets</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">🎯</div>
                    <div class="stat-info">
                        <div class="stat-label">Active Goals</div>
                        <div class="stat-value">@activeGoals</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Settings Card -->
        <div class="profile-card">
            <div class="card-header">
                <h2>Security Settings</h2>
                <p>Manage your account security</p>
            </div>

            <div class="security-options">
                <div class="security-item">
                    <div class="security-info">
                        <h3>Password</h3>
                        <p>Last changed: @passwordLastChanged</p>
                    </div>
                    <a href="/Account/Manage/ChangePassword" class="btn-secondary">Change Password</a>
                </div>

                <div class="security-item">
                    <div class="security-info">
                        <h3>Two-Factor Authentication</h3>
                        <p>@(hasTwoFactor ? "Enabled ✓" : "Not enabled")</p>
                    </div>
                    <a href="/Account/Manage/TwoFactorAuthentication" class="btn-secondary">
                        @(hasTwoFactor ? "Manage" : "Enable")
                    </a>
                </div>

                <div class="security-item">
                    <div class="security-info">
                        <h3>Email Confirmation</h3>
                        <p>@(isEmailConfirmed ? "Verified ✓" : "Not verified")</p>
                    </div>
                    @if (!isEmailConfirmed)
                    {
                        <button @onclick="SendVerificationEmail" class="btn-secondary">Send Verification</button>
                    }
                </div>
            </div>
        </div>

        <!-- Preferences Card -->
        <div class="profile-card">
            <div class="card-header">
                <h2>Preferences</h2>
                <p>Customize your experience</p>
            </div>

            <EditForm Model="PreferencesInput" OnValidSubmit="SavePreferences">
                <div class="preferences-list">
                    @* <div class="preference-item">
                        <div class="preference-info">
                            <h3>Email Notifications</h3>
                            <p>Receive budget alerts and updates</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" @bind="PreferencesInput.EmailNotifications" />
                            <span class="toggle-slider"></span>
                        </label>
                    </div> *@

                    <div class="preference-item">
                        <div class="preference-info">
                            <h3>Budget Alerts</h3>
                            <p>Get notified when approaching budget limits</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" @bind="PreferencesInput.BudgetAlerts" />
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="preference-item">
                        <div class="preference-info">
                            <h3>Goal Reminders</h3>
                            <p>Receive reminders about your savings goals</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" @bind="PreferencesInput.GoalReminders" />
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">Save Preferences</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Project_PiggyProUser user = default!;
    private string? username;
    private string? email;
    private string? phoneNumber;
    private bool isSaving = false;
    private string? successMessage;
    private string? errorMessage;

    // Statistics
    private string memberSince = "Loading...";
    private int totalTransactions = 0;
    private int activeBudgets = 0;
    private int activeGoals = 0;

    // Security
    private string passwordLastChanged = "Never";
    private bool hasTwoFactor = false;
    private bool isEmailConfirmed = false;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    [SupplyParameterFromForm]
    private PreferencesModel PreferencesInput { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        try
        {
            // ✅ Correct way in Blazor InteractiveServer
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var principal = authState.User;

            if (principal?.Identity?.IsAuthenticated != true)
            {
                errorMessage = "You are not logged in.";
                return;
            }

            user = await UserManager.GetUserAsync(principal)
                ?? throw new InvalidOperationException("Unable to load the current user.");

            username = user.UserName;
            email = user.Email;
            phoneNumber = user.PhoneNumber;

            // Fill form defaults
            Input.PhoneNumber = phoneNumber;
            Input.FirstName = user.FirstName;
            Input.LastName = user.LastName;

            // ✅ Member since
            memberSince = user.CreatedAt == default
                ? "—"
                : user.CreatedAt.ToString("MMMM dd, yyyy");

            // ✅ Load statistics from DB
            using var db = await DbFactory.CreateDbContextAsync();

            totalTransactions = await db.Transaction.CountAsync(t => t.AppUserId == user.Id);

            activeBudgets = await db.Budget.CountAsync(b =>
                b.AppUserId == user.Id &&
                b.EndDate >= DateTime.Today);

            activeGoals = await db.Goal.CountAsync(g =>
                g.AppUserId == user.Id &&
                g.Status == "Active");

            // Security
            hasTwoFactor = await UserManager.GetTwoFactorEnabledAsync(user);
            isEmailConfirmed = await UserManager.IsEmailConfirmedAsync(user);

            // Preferences (still dummy until you store in DB)
            PreferencesInput.EmailNotifications = true;
            PreferencesInput.BudgetAlerts = true;
            PreferencesInput.GoalReminders = true;
        }
        catch
        {
            errorMessage = "Error loading profile data.";
        }
    }

    private void SaveAndRedirect()
    {
        // Start save (don't wait)
        _ = UpdateProfileAsync();

        // Redirect immediately
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    private async Task UpdateProfileAsync()
    {
        try
        {
            user.FirstName = Input.FirstName;
            user.LastName = Input.LastName;
            await UserManager.UpdateAsync(user);
            await SignInManager.RefreshSignInAsync(user);
        }
        catch { }
    }
    private async Task OnValidSubmitAsync()
    {
        Console.WriteLine("=== FORM SUBMIT STARTED ===");

        // ✅ CRITICAL: Give Blazor time to finish binding
        await Task.Delay(300);

        isSaving = true;
        successMessage = null;
        errorMessage = null;

        try
        {
            Console.WriteLine($"Input.FirstName: '{Input.FirstName}'");
            Console.WriteLine($"Input.LastName: '{Input.LastName}'");
            Console.WriteLine($"Input.PhoneNumber: '{Input.PhoneNumber}'");
            Console.WriteLine($"User.FirstName: '{user.FirstName}'");
            Console.WriteLine($"User.LastName: '{user.LastName}'");

            bool hasChanges = false;

            // Update phone number
            if (Input.PhoneNumber != phoneNumber)
            {
                Console.WriteLine($"Phone number changed from '{phoneNumber}' to '{Input.PhoneNumber}'");
                var setPhoneResult = await UserManager.SetPhoneNumberAsync(user, Input.PhoneNumber);
                if (!setPhoneResult.Succeeded)
                {
                    var errors = string.Join(", ", setPhoneResult.Errors.Select(e => e.Description));
                    errorMessage = $"Failed to update phone number: {errors}";
                    Console.WriteLine($"❌ Phone update failed: {errors}");
                    isSaving = false;
                    return;
                }
                hasChanges = true;
                Console.WriteLine("✅ Phone number updated");
            }

            // Update first name
            if (Input.FirstName != user.FirstName)
            {
                Console.WriteLine($"First name changed from '{user.FirstName}' to '{Input.FirstName}'");
                user.FirstName = Input.FirstName;
                hasChanges = true;
            }

            // Update last name
            if (Input.LastName != user.LastName)
            {
                Console.WriteLine($"Last name changed from '{user.LastName}' to '{Input.LastName}'");
                user.LastName = Input.LastName;
                hasChanges = true;
            }

            Console.WriteLine($"Has changes: {hasChanges}");

            if (hasChanges)
            {
                Console.WriteLine("Updating user in database...");
                var updateResult = await UserManager.UpdateAsync(user);

                if (updateResult.Succeeded)
                {
                    Console.WriteLine("✅ User updated successfully");
                    Console.WriteLine("Refreshing sign-in...");

                    await SignInManager.RefreshSignInAsync(user);

                    Console.WriteLine("✅ Sign-in refreshed");
                    Console.WriteLine("Redirecting to login...");

                    // ✅ Redirect to login page with full reload
                    NavigationManager.NavigateTo("/Account/Login", forceLoad: true);
                }
                else
                {
                    var errors = string.Join(", ", updateResult.Errors.Select(e => e.Description));
                    errorMessage = $"Failed to update profile: {errors}";
                    Console.WriteLine($"❌ Update failed: {errors}");
                }
            }
            else
            {
                successMessage = "No changes detected.";
                Console.WriteLine("ℹ️ No changes detected");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
            Console.WriteLine($"❌ EXCEPTION: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
        finally
        {
            isSaving = false;
            Console.WriteLine("=== FORM SUBMIT ENDED ===");
        }
    }

    private async Task SavePreferences()
    {
        successMessage = "Preferences saved successfully!";
        // TODO: Save preferences to database
    }

    private async Task SendVerificationEmail()
    {
        successMessage = "Verification email sent! Please check your inbox.";
        // TODO: Implement email verification sending
    }

    private sealed class InputModel
    {
        [Phone]
        [Display(Name = "Phone number")]
        public string? PhoneNumber { get; set; }

        [StringLength(50)]
        [Display(Name = "First Name")]
        public string? FirstName { get; set; }

        [StringLength(50)]
        [Display(Name = "Last Name")]
        public string? LastName { get; set; }
    }

    private sealed class PreferencesModel
    {
        public bool EmailNotifications { get; set; }
        public bool BudgetAlerts { get; set; }
        public bool GoalReminders { get; set; }
    }
}
